            { "chrom": "chr7", "pos": 66800000 }
          ]
        }
      },
      "color": {
        "field": "base",
        "type": "nominal",
        "scale": {
          "domain": ["A", "C", "T", "G", "a", "c", "t", "g", "N"],
          "range": [
            "#7BD56C",
            "#FF9B9B",
            "#86BBF1",
