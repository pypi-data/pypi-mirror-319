# Global configuration
MQTT_DATA_ROOT_TOPIC=hydroqc
MQTT_DISCOVERY_DATA_TOPIC=homeassistant
MQTT_HOST=127.0.0.1
MQTT_PORT=1883

# Contracts configuration

# The "name" option will be used as the device name in HA and in the topic structure in MQTT
HQ2M_CONTRACTS_0_NAME=maison
HQ2M_CONTRACTS_0_USERNAME=mon@courriel.tld
HQ2M_CONTRACTS_0_PASSWORD=soleil123
# Account Number (Numéro de compte) from your invoice
HQ2M_CONTRACTS_0_ACCOUNT="1234567890123"
# Contract Number (Numéro de contrat) from your invoice
# 10 digits, you may need to add a leading 0 to the value!!!
# Ex: "123 456 789" will be "0123456789"
HQ2M_CONTRACTS_0_CONTRACT="0123456789"
# Customer number (Numéro de facture) from your invoice. 10 digits
# 10 digits, you may need to add a leading 0 to the value!!!
# Ex: "987 654 321" will be "0987654321"
HQ2M_CONTRACTS_0_CUSTOMER="0987654321"
# See documentation for the different rate options https://hydroqc.ca/fr/docs/configuration/environment/
HQ2M_CONTRACTS_0_RATE=D
HQ2M_CONTRACTS_0_RATE_OPTION=CPC
HQ2M_CONTRACTS_0_SYNC_FREQUENCY="600"
# The amount of minutes before a critical peak that the preheat should start
HQ2M_CONTRACTS_0_PREHEAT_DURATION_MINUTES=120
# Configuration options for Home-Assistant Energy consumption
HQ2M_CONTRACTS_0_SYNC_HOURLY_CONSUMPTION_ENABLED="true"
HQ2M_CONTRACTS_0_HOME_ASSISTANT_WEBSOCKET_URL=http://home-assistant.local:8123/api/websocket
