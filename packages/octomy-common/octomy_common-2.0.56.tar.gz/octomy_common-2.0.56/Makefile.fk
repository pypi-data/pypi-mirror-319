	cd "$(FK_BOOTSTRAP_5_DIR)"; \
	sass "main.scss" "$(FK_BOOTSTRAP_STYLES_DIR)/main_5.css" --trace --sourcemap=none
	@sync

bootstrap-prep: bootstrap-prep-4 bootstrap-prep-5

bootstrap-build: bootstrap-build-4 bootstrap-build-5


