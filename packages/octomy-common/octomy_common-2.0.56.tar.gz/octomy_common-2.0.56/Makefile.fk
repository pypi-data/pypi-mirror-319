	@if [ "$(shell git rev-parse --abbrev-ref HEAD)" = "$(FK_RELEASE_BRANCH)" ]; then \
		echo "We are on the release branch '$(FK_RELEASE_BRANCH)'"; \
	else \
		echo "This operation can only be run on the release branch '$(FK_RELEASE_BRANCH)'"; \
		exit 1; \
	fi
	
