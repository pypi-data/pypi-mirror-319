		echo "CURL:"; \
		curl -s -L "$(FK_PYTHON_SOURCE_URL)" | tar pJxv; \
		sync; \
	fi; \
	echo "PUSHD:"; \
	pushd $${FK_PYTHON_SOURCE_UNCOMPRESS_PATH}; \
	echo "CONFIG:"; \
	./configure --enable-optimizations --enable-shared; \
	sync; \
	echo "build:"; \
	make -j; \
	sync; \
	echo "install:"; \
	sudo make altinstall; \
	sync; \
	echo "ld config:"; \
	ldconfig .;\
	popd ;\
	}

