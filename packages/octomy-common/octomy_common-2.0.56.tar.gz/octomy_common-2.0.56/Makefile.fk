	@if git rev-parse "$(FK_BARE_VERSION)" >/dev/null 2>&1; then \
		echo "Tag $(FK_BARE_VERSION) already exists"; \
		exit 1; \
	else \
		echo "Tag $(FK_BARE_VERSION) does not exist"; \
	fi

